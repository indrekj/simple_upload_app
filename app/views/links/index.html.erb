<table id="links">
  <thead class="odd">
    <tr>
      <td>Link</td>
      <td>Kirjeldus</td>
      <td>Lisatud</td>
    </tr>
  </thead>

  <% @links.each do |link| -%>
    <tr class="<%= cycle('even', 'odd') %>">
      <td><%= link_to truncate(h(link.url), 30), link.url, :target => '_none' %></td>
      <td><%=h link.description %></td>
